<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="./img/weather-favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="./css/style.css" />
    <title>Weather App</title>
    <script src="./js/app.js" defer></script>
  </head>
  <body>
    <div class="main-content">
      {{>header}}
      <p>Use this site to see the weather information in your location</p>
      <form id="location-form" action="">
        <input type="text" name="location" id="location-input" placeholder="Location">
        <button type="submit">Search</button>
      </form>
      <p id="message-1"></p>
      <p id="message-2"></p>
    </div>
    {{>footer}}
  </body>
</html>